{
  "name": "@buzz-js/lsdb",
  "version": "2.0.0",
  "description": "✨Database powered by localStorage",
  "main": "lib/lsdb.js",
  "types": "lib/lsdb.d.ts",
  "prepublish": "tsc",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "tsc --watch --project tsconfig.json",
    "build": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buzz-js/lsdb.git"
  },
  "keywords": [
    "database",
    "localstorage"
  ],
  "author": "Roberth González",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buzz-js/lsdb/issues"
  },
  "homepage": "https://github.com/buzz-js/lsdb#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^27.0.3",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js|jsx)$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/examples/",
      "/.github/"
    ]
  }
}
