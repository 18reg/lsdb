{
  "name": "@reliutg/lsdb",
  "version": "4.6.1",
  "description": "✨Database powered by localStorage",
  "main": "./lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "prepublish": "tsc",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev": "tsc --watch --project tsconfig.json",
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint --fix -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reliut-g/lsdb.git"
  },
  "keywords": [
    "database",
    "localstorage"
  ],
  "author": "Eliut González (https://github.com/reliut-g)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reliut-g/lsdb/issues"
  },
  "homepage": "https://github.com/reliut-g/lsdb#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "jest": "^27.1.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "prettier": "^2.3.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  }
}
