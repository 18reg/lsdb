{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
